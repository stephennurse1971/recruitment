{% extends 'admin/base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block content %}
    {{ parent() }}
    <h1>Country index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Country</th>
                <th>Include Resort</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.country }}</td>
                <td>{{ country.country }}</td>
                <td>
                    <a class="btn-outline-success" href="{{ path('country_show', {'id': country.id}) }}">Show</a>
                    <a class="btn-outline-danger" href="{{ path('country_edit', {'id': country.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
         {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('country_new') }}">Create new</a>

{% for test in countries %}
    {{ test.include_resort }}
    {%  endfor  %}
{% endblock %}
