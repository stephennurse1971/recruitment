{% extends 'admin/base.html.twig' %}
{% block title %}Category index{% endblock %}
{% block content %}
    {{ parent()}}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.category }}</td>
                <td>
                    <a class="btn btn-outline-success" href="{{ path('category_show', {'id': category.id}) }}">Show</a>
                    <a class="btn btn-outline-danger" href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('category_new') }}">Add</a>
{% endblock %}
