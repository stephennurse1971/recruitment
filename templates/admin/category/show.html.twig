{% extends 'admin/base.html.twig' %}
{% block title %}Category{% endblock %}
{% block content %}
    {{ parent() }}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ category.category }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('category_index') }}">Return to list</a>
    <a class="btn btn-outline-danger" href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>

    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
