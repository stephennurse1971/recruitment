{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Wages</th>
                <th>AccommodationProvided</th>
                <th>SkiPassProvided</th>
                <th>EquipmentProvided</th>
                <th>FullBoard</th>
                <th>DateStart</th>
                <th>DateEnd</th>
                <th>Requirements</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.wages }}</td>
                <td>{{ job.accommodationProvided ? 'Yes' : 'No' }}</td>
                <td>{{ job.skiPassProvided ? 'Yes' : 'No' }}</td>
                <td>{{ job.equipmentProvided ? 'Yes' : 'No' }}</td>
                <td>{{ job.fullBoard }}</td>
                <td>{{ job.dateStart ? job.dateStart|date('Y-m-d') : '' }}</td>
                <td>{{ job.dateEnd ? job.dateEnd|date('Y-m-d') : '' }}</td>
                <td>{{ job.requirements }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
